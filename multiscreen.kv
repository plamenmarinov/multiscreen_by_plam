<FirstScreen>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10,10
        Label:
            text: "First"
            bold: True
            font_size: 60
        Button:
            text: "Next"
            background_color: 0, 1, 0, 1
            font_size: 60
            on_press: self.parent.parent.next()

<SecondScreen>:
    name: "second"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10,10
        Label:
            text: "Second"
            bold: True
            font_size: 60
        Button:
            text: "Next"
            background_color: 0, 1, 0, 1
            font_size: 60
            on_press: self.parent.parent.next()
        Button:
            text: "Prev"
            background_color: 0.2,0.2,0.8,1
            font_size: 60
            on_press: self.parent.parent.prev()

<ThirdScreen>:
    name: "third"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10,10
        Label:
            text: "Third"
            bold: True
            font_size: 60
        Button:
            text: "Prev"
            background_color: 0.2,0.2,0.8,1
            font_size: 60
            on_press: self.parent.parent.prev()

AppWindow:
    FirstScreen:
    SecondScreen:
    ThirdScreen: